<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:core="http://www.porua.org/core" xmlns:http="http://www.porua.org/http"
	xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       https://www.springframework.org/beans/spring-beans-4.0.xsd
       http://www.porua.org/http
       http://www.porua.org/http/http.xsd
       http://www.porua.org/core
       http://www.porua.org/core/core.xsd">


	<http:listener-config name="http-config" host="localhost"
		port="8080" path="/hello" />


	<core:porua-flow id="testFlow_1">
		<http:listener config-ref="http-config" path="/flow1" />
		<core:json-to-xml mimeType="xml" />
		<core:json-to-java mimeType="java" />
	</core:porua-flow>

	<core:porua-flow id="testFlow_2">
		<http:listener config-ref="http-config" path="/flow2" />
		<core:json-to-xml mimeType="xml" />
		<core:json-to-java mimeType="java" />
	</core:porua-flow>
</beans>